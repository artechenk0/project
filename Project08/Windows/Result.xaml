<Window x:Class="Project08.Windows.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project08.Windows"
        mc:Ignorable="d"
        Title="Result" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlockLeft"/>
        <TextBlock x:Name="TextBlockCentral" Grid.Column="1"/>
        <TextBlock x:Name="TextBlockRight" Grid.Column="2"/>

        <Button x:Name="BtnGetGraphic" Content="Показать график функции методом средных прямоугольников" Grid.ColumnSpan="3" Grid.Row="2" Click="BtnGetGraphic_Click"/>
    </Grid>
</Window>
